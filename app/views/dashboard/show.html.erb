<% title "Skolpt | Dashboard" %>

<div class="container">
  <div class="col-md-3 profile-col">
    <div class="row">
      <div class="profile-image">
        
      </div>
    </div>
    
    <div class="row">
      <% if @user.first_name? && @user.last_name? %>
          <h4><%= @user.first_name + " " + @user.last_name %></h4>
      <% end %>
    </div>
    
    <div class="row">
      <p class="profile-label"><strong>Email</strong></p>
      <p><%= @user.email %></p>
    </div>
    
    <div class="row">
      <%= link_to "Edit", "#", class: "btn btn-xs btn-primary " %>
      <%= link_to "Delete", "#", class: "btn btn-xs btn-danger" %>
    </div>
    
  </div>
</div>