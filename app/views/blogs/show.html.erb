<h1><%= @blog.title %></h1>

<div class="row">
  <div class="blog-detail-container md-col-8">
    <p>
      <strong><%= simple_format(@blog.byline) %></strong>
    </p>
    <p>
      <%= simple_format(@blog.content) %>
    </p>
    <p>
      <span class="quiet"><%= time_ago_in_words(@blog.updated_at) %> ago | Posted by: Admin</span>
    </p>
    
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to "Edit Blog", edit_blog_path(@blog), class: "btn btn-primary btn-space" %>
      <%= link_to "Delete Blog", blog_path(@blog), method: :delete, 
                data: { confirm: "Are you sure you want to delete the blog entry?" },
                class: "btn btn-danger btn-primary btn-space" %>
    <% end %>
  </div>
</div>